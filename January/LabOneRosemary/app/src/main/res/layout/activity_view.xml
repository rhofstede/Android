<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:id="@+id/spinner_choose_category"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:entries="@array/category_names"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/text_view_review_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_view_reviews_title"
        android:textSize="20sp"
        android:textColor="@color/color_text_dark"
        android:layout_below="@id/spinner_choose_category"/>
    <ListView
        android:id="@+id/list_view_review_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>